# Headers
def get_headers():
    return {
        "Authorization": f"Bearer {BEARER_TOKEN}",
        "X-Snowflake-Authorization-Token-Type": "KEYPAIR_JWT",
        "Content-Type": "application/json",
        "Accept": "application/json",
        "User-Agent": "Python-Requests"
    }

# Create JSON payload
def create_payload(parameter_value):
    return {
        "statement": f"CALL MY_DATABASE.MY_SCHEMA.HELLO_SQL('{parameter_value}');",
        "timeout": 1000,  # Fix: Use integer, not string
        "warehouse": "MY_WH",
        "database": "MY_DATABASE",
        "schema": "MY_SCHEMA",
        "role": "PUBLIC"
    }

# Call Snowflake API
def call_snowflake_api(parameter_value):
    payload = create_payload(parameter_value)
    headers = get_headers()

    # Debugging: Print the payload before sending
    print("üîπ Payload Sent to Snowflake:")
    print(json.dumps(payload, indent=2))

    # Send the API request
    response = requests.post(ENDPOINT, headers=headers, json=payload)

    # Debugging: Print response details
    print("\nüì© Status Code:", response.status_code)
    try:
        print("üìú Response:", json.dumps(response.json(), indent=2))
    except json.JSONDecodeError:
        print("‚ùå Failed to decode JSON response:", response.text)

    return response

# Example function call
user_input = "Hello Akjbhjkhbksdjbv"
call_snowflake_api(user_input)
